# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

# Docstrings and comments use max_line_length = 79
[*.py]
max_line_length = 110

# Use 2 spaces for the HTML files
[*.html]
indent_size = 2

# Use 2 spaces for the CSS files
[*.css]
indent_size = 2

# Use 2 spaces for the JS files
[*.js]
indent_size = 2

# Use 2 spaces for the JSON files
[*.json]
indent_size = 2
